<div class="app">
  <div id="sidenav">
    <div class="wrapper">
      <div class="logo">
        <a href="#">Dashboard</a>
        <p>{{user.name}}</p>
        <a href="#" class="nav-icon pull-right"><i class="fa fa-bars"></i></a>
      </div>
      <div class="menu">
        <ul>
          <li><a href="/users">Home</a></li>
          <li><a href="/">Main Home</a></li>
          <li class="active"><a href="/users/findSkill">Select Skill</a></li>
          <li><a href="/users/logout" class="logout">Login</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div id="main-content" class="p-5">
    <div class="row">
      <div class="col-12 p-5 bg-dark text-light text-center" style="border: 1px solid #1f1f1f; border-radius: 8px;">
        <h3>{{skill.name}}</h3>
        <p>Price: â‚¦{{skill.price}}</p>
        <a class="btn btn-danger" data-skill="{{skill._id}}" data-id="{{user._id}}" data-amount="{{skill.price}}"
          data-customer_email="{{user.email}}" data-custom_title="{{skill.name}} Payment" data-payment_method="both"
          id="btnMakePayment"> Make Payment </a>
      </div>
      <div class="col-sm-6 col-xs-12 mt-3 p-3 bg-light" style="border: 1px solid #1f1f1f; border-radius: 8px;">
        {{{skill.desc}}}
      </div>
      <div class="col-sm-6 col-xs-12 mt-3" style="overflow: hidden;">
        <img src="{{skill.image_url}}" class="img im-responsive img-bordered" style="width:100%;height: 300px;"
          alt="{{skill.name}}">
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-3 bg-light p-4">
        <p> Resources </p>
        {{#if resources}}
        <ol>
          {{#each resources as |res key|}}
          <li>{{res.name}} - {{res.type}}</li>
          {{/each}}
          </ul>
          {{else}}
          <p>No resources yet</p>
          {{/if}}
      </div>
    </div>
  </div>
</div>