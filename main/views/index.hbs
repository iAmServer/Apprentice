<section class="mb-3">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mt-5 mb-3">
                <h4>Select Course</h4>
            </div>
            <div class="col-12">
                <div class="row">
                    {{# each skills as |skill key|}}
                    <div class="col-xs-12 col-sm-4 mb-2">
                        <div class="card">
                            <img class="card-img-top" src="{{skill.image_url}}" alt="Card image" style="height: 250px;">
                            <div class="card-body text-center">
                                <h4 class="card-title">{{skill.name}}</h4>
                                <p class="card-text">{{skill.price}}</p>
                                <button type="button" class="btn btn-info btn-block btn-select-skill"
                                    data-id="{{skill.id}}">Select Skills</button>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
